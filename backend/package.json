{
  "name": "atelier-olfactif-backend",
  "version": "1.0.0",
  "description": "Backend PayloadCMS pour l'Atelier Olfactif",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "cross-env PAYLOAD_CONFIG_PATH=payload.config.ts ts-node --transpile-only src/server.ts",
    "build": "cross-env PAYLOAD_CONFIG_PATH=payload.config.ts tsc && payload build",
    "build:render": "cross-env NODE_ENV=production PAYLOAD_CONFIG_PATH=payload.config.ts tsc --skipLibCheck && payload build",
    "serve": "cross-env NODE_ENV=production node dist/src/server.js",
    "start": "node -e \"console.log('MONGODB_URI ENV VAR:', process.env.MONGODB_URI)\" && node dist/src/server.js",
    "health-check": "echo \"Health check passed\" && exit 0",
    "test:mongo": "ts-node src/pingMongo.ts",
    "import:parfums": "cross-env PAYLOAD_CONFIG_PATH=payload.config.ts ts-node src/scripts/import-parfums.ts",
    "import:parfums:alt": "ts-node src/scripts/import-parfums-alt.ts",
    "import:parfums:direct": "ts-node src/scripts/import-parfums-direct.ts",
    "import:minimal": "ts-node src/scripts/import-minimal.ts",
    "examine:schema": "ts-node src/scripts/examine-schema.ts",
    "reset:collections": "ts-node src/scripts/reset-collections.ts",
    "db:seed": "cross-env NODE_ENV=production ts-node src/scripts/seed.ts",
    "test:chogan": "ts-node src/scripts/test-chogan-automation.ts",
    "test:cloudflare": "ts-node src/scripts/test-cloudflare-bypass.ts",
    "test:auth": "ts-node src/scripts/test-auth-chogan.ts",
    "test:puppeteer": "ts-node src/scripts/test-puppeteer-chogan.ts",
    "test:login": "ts-node src/scripts/test-login-btn.ts",
    "test:simple": "ts-node src/scripts/test-simple-login.ts"
  },
  "dependencies": {
    "@hapi/hoek": "^11.0.7",
    "@payloadcms/bundler-webpack": "^1.0.9",
    "@payloadcms/db-mongodb": "^1.7.3",
    "@payloadcms/richtext-slate": "^1.2.0",
    "@types/cors": "^2.8.17",
    "axios": "^1.9.0",
    "axios-cookiejar-support": "^5.0.5",
    "bcryptjs": "^3.0.2",
    "caniuse-api": "^3.0.0",
    "cheerio": "^1.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "csurf": "^1.11.0",
    "csv-parse": "5.6.0",
    "csv-parser": "^3.2.0",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "mongodb": "^6.16.0",
    "payload": "^2.30.0",
    "puppeteer": "^24.10.1",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "sass": "^1.58.3",
    "tough-cookie": "^5.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.1",
    "@babel/preset-react": "^7.27.1",
    "@swc/core": "^1.11.24",
    "@types/express": "4.17.21",
    "@types/node": "20.10.4",
    "babel-loader": "^10.0.0",
    "cssnano": "^7.0.6",
    "nodemon": "3.0.2",
    "postcss": "^8.5.3",
    "postcss-preset-env": "^10.1.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^4.1.5",
    "ts-node": "10.9.1",
    "tsx": "^4.20.3",
    "typescript": "5.3.3"
  },
  "overrides": {
    "webpack": "^5.93.0"
  }
}
